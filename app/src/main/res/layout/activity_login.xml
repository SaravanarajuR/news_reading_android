<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:paddingHorizontal="20dp"
    android:paddingVertical="70dp"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/newslogo"></ImageView>
<TextView
    android:layout_centerHorizontal="true"
    android:id="@+id/name"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:text="NewSphere"
    android:textFontWeight="900"
    android:textColor="@color/violet"
    android:textSize="30dp"
    android:fontFamily="@font/gabriela"
    android:layout_below="@+id/logo"></TextView>
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be Informed. Be Inspired. Be Connected."
            android:textFontWeight="900"
            android:textColor="@color/purple_200"
            android:textSize="13dp"
            android:fontFamily="@font/gabriela"
            android:layout_below="@+id/name"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/rel"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:maxLength="10"
            android:maxLines="1"
            android:id="@+id/inp1"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_width="220dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:hint="Mobile"
            android:textColorHint="@color/white"
            >
        </com.google.android.material.textfield.TextInputEditText>
    <Button
        android:id="@+id/send"
        android:backgroundTint="@color/violet"
        android:background="@drawable/rectangle"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/inp1"
        android:layout_width="110dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="35dp"
        android:text="Send OTP"></Button>
        <TextView
            android:id="@+id/timer"
            android:layout_below="@+id/inp1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            ></TextView>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_below="@+id/rel2"
        android:id="@+id/otp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:backgroundTint="@color/white"
        android:hint="Enter OTP"
        android:textColorHint="@color/white"
        ></com.google.android.material.textfield.TextInputEditText>

            <Button
                android:id="@+id/sub"
                android:backgroundTint="#fff"
                android:layout_marginTop="20dp"
                android:background="@color/violet"
                android:layout_below="@+id/otp"
                android:layout_width="200dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:text="Login"></Button>
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textFontWeight="900"
        android:textSize="30dp"
        android:fontFamily="@font/gabriela"
        android:layout_below="@+id/sub"></TextView>
    </RelativeLayout>