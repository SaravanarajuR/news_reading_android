<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darknavy"
    android:id="@+id/newsparent">
    <TextView
        android:text="Explore"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="@font/gabriela"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/explore"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginVertical="20dp"
        android:textSize="10dp"
        android:text="Logout"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"></Button>
    <RelativeLayout
        android:layout_below="@+id/explore"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
        <EditText
            android:paddingHorizontal="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/searchbar"
            android:layout_centerVertical="true"
            android:layout_width="250dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:background="@drawable/rectangle"
            android:layout_height="40dp"></EditText>
            <Button
                android:layout_toRightOf="@+id/searchbar"
                android:id="@+id/button"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="@font/gabriela"
                android:text="search"
                android:backgroundTint="@color/white"
                android:layout_width="100dp"
                android:layout_height="50dp"></Button>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nav"
        android:layout_below="@+id/search"
        android:layout_width="wrap_content"
        android:background="@color/darknavy"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="350px">
        <HorizontalScrollView
        android:layout_width="wrap_content"
            android:scrollbarSize="4dp"
            android:scrollIndicators="bottom"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbHorizontal="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
        android:layout_height="350px">
       <LinearLayout
           android:id="@+id/ll"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/nav"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:scrollbarSize="7dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@color/white"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/newsArea"
            android:foreground="@drawable/smallrect"
            android:backgroundTint="@color/darknavy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>