<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darknavy"
    android:id="@+id/newsparent">
    <TextView
        android:text="Explore"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="@font/gabriela"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/explore"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/newscolor"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:onClick="handleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            ></ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/profile"
        android:id="@+id/menu"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/plan"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/belgrano"
            android:textSize="9dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="Username"></TextView>
        <TextView
            android:id="@+id/username"
            android:layout_below="@+id/plan"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/belgrano"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:text="Username"></TextView>

        <Button
            android:id="@+id/logout"
            android:layout_below="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="10dp"></Button>
        <Button
            android:id="@+id/prem"
            android:layout_below="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:onClick="handlePremium"
            android:text="Upgrade to Premium"
            android:textColor="@color/white"
            android:textSize="10dp"></Button>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/explore"
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"

        android:layout_marginHorizontal="10dp"
        android:layout_height="40dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                >
                <EditText
                    android:id="@+id/searchbar"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@color/white"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:background="@drawable/smallrect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/button"
                    app:layout_constraintWidth_percent="0.65"></EditText>

                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:height="30dp"
                    android:background="@drawable/filledrect"
                    android:text="Search"
                    android:backgroundTint="@color/newscolor"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/searchbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintWidth_percent="0.3"></Button>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/nav"
        android:layout_below="@+id/search"
        android:layout_width="wrap_content"
        android:background="@color/darknavy"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <HorizontalScrollView
        android:layout_width="wrap_content"
            android:scrollbarSize="4dp"
            android:scrollIndicators="bottom"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbHorizontal="@color/dgrey"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingVertical="10dp"
        android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/ll"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/newsAreaCard"
        android:layout_below="@+id/nav"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:scrollbarSize="3dp"
            android:scrollbarStyle="outsideInset"
            android:scrollbarThumbVertical="@color/white"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/newsArea"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>