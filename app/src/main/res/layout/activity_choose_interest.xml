<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:layout_height="match_parent"
    android:background="@color/darknavy">

    <TextView
        android:id="@+id/toptext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/gabriela"
        android:gravity="center"
        android:text="User Details"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>
    <EditText
        android:layout_below="@+id/toptext"
        android:id="@+id/uname"
        android:hint="Enter username"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_width="320dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"></EditText>

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/uname"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gabriela"
        android:gravity="center"
        android:text="Choose your favourites"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_below="@id/top"
        android:gravity="center"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:foreground="@drawable/cardborder"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card1"
        android:background="@drawable/cardborder"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        android:onClick="handleFavs"
        >
        <ImageView
            android:layout_width="match_parent"
            android:scaleX="1.9"
            android:layout_height="match_parent"
            android:src="@drawable/sports"/>
        <TextView
            android:id="@+id/text1"
            android:fontFamily="@font/gabriela"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:background="@color/red"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Sports"></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="@drawable/cardborder"
        android:id="@+id/card2"
        android:layout_toRightOf="@+id/card1"
        android:onClick="handleFavs"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:scaleX="1.3"
            android:scaleY="1.6"
            android:layout_height="match_parent"
            android:src="@drawable/politics"/>
        <TextView
            android:id="@+id/text2"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:fontFamily="@font/gabriela"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Politics"></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="@drawable/cardborder"
        android:id="@+id/card3"
        android:onClick="handleFavs"
        android:background="@drawable/cardborder"

        android:layout_below="@+id/card1"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:scaleY="2"
            android:scaleX="2"
            android:layout_height="match_parent"
            android:src="@drawable/weather"/>
        <TextView
            android:id="@+id/text3"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/gabriela"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Weather"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/cardborder"
        android:id="@+id/card4"
        android:background="@drawable/cardborder"
        android:onClick="handleFavs"
        android:layout_below="@+id/card2"
        android:layout_toRightOf="@+id/card3"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleY="1.5"
            android:src="@drawable/tech"/>
        <TextView
            android:id="@+id/text4"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:fontFamily="@font/gabriela"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Technology"></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:onClick="handleFavs"
        android:foreground="@drawable/cardborder"
        android:id="@+id/card5"
        android:layout_below="@+id/card3"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleY="1.7"
            android:src="@drawable/crime"/>
        <TextView
            android:id="@+id/text5"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_height="25dp"
            android:fontFamily="@font/gabriela"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Crime"></TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:onClick="handleFavs"
        android:foreground="@drawable/cardborder"
        android:id="@+id/card6"
        android:layout_below="@+id/card4"
        android:layout_width="140dp"
        android:layout_margin="10dp"
        android:layout_height="110dp"
        android:layout_toRightOf="@+id/card5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleY="1.7"
            android:src="@drawable/edu"/>
        <TextView
            android:id="@+id/text6"
            android:layout_gravity="bottom"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:fontFamily="@font/gabriela"
            android:textColor="@color/white"
            android:paddingHorizontal="5dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Educational"></TextView>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <Button
        android:id="@+id/finish"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_width="220dp"
        android:layout_below="@+id/rel"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/lviolet"
        android:layout_height="50dp"
        android:text="Finish set up"></Button>
</RelativeLayout>